<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:background="@color/grey_100"
android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="290dp"
    tools:context=".editeColumeNumber">


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="12dp"
        android:text="Ip Address - "
        android:textColor="@color/displyatext"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/text"
        android:layout_toRightOf="@+id/text"
        android:text="Ip Address"
        android:textColor="@color/displyaResult"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:text="Latitude - "
        android:textColor="@color/displyatext"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text1"
        android:layout_alignBottom="@+id/text1"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="53dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:text="Latitude"
        android:textColor="@color/displyaResult"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"
        android:text="Longitude - "
        android:textColor="@color/displyatext"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text3"
        android:layout_alignBottom="@+id/text3"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginBottom="1dp"
        android:layout_toEndOf="@+id/text3"
        android:layout_toRightOf="@+id/text3"
        android:text="Longitude"
        android:textColor="@color/displyaResult"
        android:textSize="18dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:layout_below="@+id/t3"
        android:id="@+id/newPassSpa" />

    <TextView
        android:id="@+id/tex11"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPassSpa"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="3dp"
        android:text="Lantern Manufacturer"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tex11"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginStart="83dp"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="-440dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:hint="Enter Number "
        android:textColor="@color/displyaResult"
        android:textSize="18dp" />

    <Button

        android:id="@+id/btnSave"
        android:layout_width="236dp"
        android:layout_height="37dp"
        android:layout_marginTop="193dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:layout_marginLeft="80dp"
        android:text="SAVE" />



</RelativeLayout>

</ScrollView>