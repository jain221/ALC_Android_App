<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@color/grey">


    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="588dp"
        android:layout_height="37dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/all_rounded"
        android:elevation="10dp">


        <Button
            android:id="@+id/button"
            android:layout_width="34dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/ic_action_name"
            android:onClick="findLocation" />


        <AutoCompleteTextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/button"
            android:background="@null"
            android:hint="  Enter Address, City or Postcode"
            android:textColor="#000"
            android:textSize="18sp" />
        <!--android:imeOptions="actionSearch"/>-->


    </RelativeLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relLayout1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:text="TextView"
        android:textColor="@color/color_log_in"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/ic_gps"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_below="@id/relLayout1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_gps" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="835dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="126dp"
        tools:context=".StationLocation" />
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="445dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Assigned Mode        "
            android:textColor="@color/toolbar_background"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioGroup"
            android:text="Unassigned Mode          "
            android:textColor="@color/toolbar_background"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioGroup"
            android:text="All Data"
            android:textColor="@color/toolbar_background"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RadioGroup>



</RelativeLayout>

